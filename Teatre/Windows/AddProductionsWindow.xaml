<Window x:Class="Teatre.Windows.AddProductionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teatre.Windows"
        xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Добавить постановку" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Width="150" Margin="10" x:Name="actorId" materialDesign:HintAssist.Hint="id актёра"/>
        <TextBox Margin="10" x:Name="roleId" materialDesign:HintAssist.Hint="id роли"/>
        <DatePicker Margin="10" x:Name="appointmentDate" materialDesign:HintAssist.Hint="Дата назвачения"/>
        <DatePicker Margin="10" x:Name="withdrawalDate" materialDesign:HintAssist.Hint="Дата снятия"/>
        <Button Content="Добавить постановку" Click="AddProductions"/>
    </StackPanel>
</Window>

<Window x:Class="Teatre.Windows.AddActorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teatre.Windows"
        mc:Ignorable="d"
        Title="Добавить актёра" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Width="150" Margin="10" x:Name="fullName"/>
        <TextBox Margin="10" x:Name="Gender"/>
        <TextBox Margin="10" x:Name="Rank"/>
        <Button Content="Добавить актёра" Click="AddActor"/>
    </StackPanel>
</Window>
